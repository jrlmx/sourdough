{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["php", "js", "repos", "artisan", "remove_files"],
    "properties": {
        "php": {
            "type": "object",
            "required": ["prod", "dev", "remove"],
            "properties": {
                "prod": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Production PHP dependencies to install"
                },
                "dev": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Development PHP dependencies to install"
                },
                "remove": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "PHP dependencies to remove"
                }
            }
        },
        "js": {
            "type": "object",
            "required": ["prod", "dev", "remove"],
            "properties": {
                "prod": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Production JavaScript dependencies to install"
                },
                "dev": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Development JavaScript dependencies to install"
                },
                "remove": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "JavaScript dependencies to remove"
                }
            }
        },
        "repos": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "url", "auth"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Repository name"
                    },
                    "url": {
                        "type": "string",
                        "description": "Repository URL"
                    },
                    "auth": {
                        "type": "boolean",
                        "description": "Whether authentication is required"
                    }
                }
            }
        },
        "artisan": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Artisan commands to run"
        },
        "remove_files": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Files to remove from the project"
        }
    }
}
